---
// Page Header Section
// ------------
// Description: The basic page header.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Props
type Props = {
  id?: string
  title?: string
  text?: string
  classes?: string
  bg?: any
}
const { id = 'intro', title, text, classes = '', bg } = Astro.props
---

<Section
  id={id}
  bg={bg}
  bgPosition="center"
  bgHeight="100%"
  classes={`relative min-h-[60vh] flex flex-col items-center justify-center overflow-hidden ${classes}`}
>
  <div class="absolute inset-0 bg-black/40"></div> <!-- Overlay para legibilidad -->
  <div class="relative z-10 flex flex-col items-center justify-center w-full max-w-2xl mx-auto text-center py-12">
    <h1 class="text-4xl md:text-6xl font-bold mb-4" set:html={title} />
    <p class="text-lg md:text-2xl mb-8" set:html={text} />
    <slot />
  </div>
</Section>

<style>
  .page-header {
    @apply mx-auto max-w-3xl;
  }
  .page-header__text {
    @apply text-lg leading-relaxed;
  }
</style>
