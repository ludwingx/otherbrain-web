---
// src/components/sections/HeroWithBg.astro
import Section from '../../ui/Section.astro';
import Button from '../../ui/Button.astro';
import { Image } from 'astro:assets';

// Content
import heroImage from '../../../assets/hero-01.webp';
---

<Section 
  id="hero"
  mode="dark"
  padding="both"
  classes={`relative min-h-[80vh] flex items-center justify-center text-center overflow-hidden`}
  bg={{
    src: heroImage.src,
    width: 1920,
    height: 1080,
    format: 'webp'
  }}
  bgPosition="extend"
  bgHeight="100%"
  overlayOpacity={50}
>
  <!-- Contenido principal -->
  <div class="container relative z-10 px-6 mx-auto text-white">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
      Agencia de <strong>automatización</strong> de IA
    </h1>

    <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-8 text-teal-100">
      Impulsa la eficiencia de tu empresa con soluciones innovadoras basadas en inteligencia artificial.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button 
        link="https://calendly.com/admin-intelexialabs/reunion-intelexia-labs" 
        classes="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 text-lg"
      >
        Agenda una reunión
      </Button>
      
      <Button 
        style="neutral" 
        link="#aboutus"
        classes="bg-transparent border-2 border-teal-300 text-teal-300 hover:bg-teal-300/10 px-8 py-3 text-lg"
      >
        ¿Quienes somos?
      </Button>
    </div>
  </div>
</Section>


